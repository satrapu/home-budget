<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application id="homebudget">
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>ro</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>ro.satrapu.homebudget.services.internationalization.messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <factory>
        <exception-handler-factory>ro.satrapu.homebudget.ui.exceptionhandler.ExceptionHandlerFactory</exception-handler-factory>
    </factory>
    <navigation-rule id="error-page">
        <navigation-case>
            <from-outcome>unexpectedException</from-outcome>
            <to-view-id>/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

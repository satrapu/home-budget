<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application id="homebudget">
        <locale-config>
            <default-locale>en_US</default-locale>
            <supported-locale>ro_RO</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>ro.satrapu.homebudget.ui.internationalization.messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <!-- message-bundle is needed in order to customize JSF converters and validators messages -->
        <message-bundle>ro.satrapu.homebudget.ui.internationalization.messages</message-bundle>
    </application>
    <factory>
        <exception-handler-factory>ro.satrapu.homebudget.ui.exceptionhandler.ExceptionHandlerFactory</exception-handler-factory>
    </factory>
</faces-config>
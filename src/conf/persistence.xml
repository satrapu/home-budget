<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" 
             xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="HomeBudgetPersistenceUnit" 
                      transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>jdbc/homebudget-db</jta-data-source>
        <class>ro.satrapu.homebudget.services.persistence.model.Category</class>
        <class>ro.satrapu.homebudget.services.persistence.model.Income</class>
        <class>ro.satrapu.homebudget.services.persistence.model.Expense</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <validation-mode>CALLBACK</validation-mode>
        <properties>
            <property name="eclipselink.ddl-generation" 
                      value="create-tables"/>
            <property name="eclipselink.logging.file"  
                      value="./logs/homebudget/homebudget.persistence.log"/>
            <property name="eclipselink.logging.logger" 
                      value="DefaultLogger"/>
            <property name="eclipselink.logging.level.sql" 
                      value="ALL" />
            <property name="eclipselink.logging.level" 
                      value="ALL" />
            <property name="eclipselink.logging.level.cache" 
                      value="ALL" />
            <property name="eclipselink.logging.parameters"
                      value="true"/>
            <property name="eclipselink.logging.timestamp" 
                      value="true"/>
            <property name="eclipselink.logging.thread" 
                      value="true"/>
            <property name="eclipselink.logging.session" 
                      value="true"/>
            <property name="eclipselink.logging.exceptions" 
                      value="true"/>
        </properties>
    </persistence-unit>
</persistence>